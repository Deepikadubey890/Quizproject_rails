<div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-2 display-3 fw-bold ls-tight">
           Signup Here
          </h1>
      </div>

        <div class="col-lg-6 mb-5 mb-lg-0 align-items-center">
          <div class="card">
            <div class="card-body py-5 px-md-5 ">
             <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-3" } )do |f| %>               
            <div class="col-md-6 mb-4 ">
                <div class="form-outline">
                   <%= f.label :EmailAddress, class:"fw-bold mb-6" %>
                   <%= f.email_field :email %>
                   <%= display_errors(resource, :email) %>
            </div>
            </div>

             <div class="col-md-6 mb-4">
             <div class="form-outline">
             <%= f.label :username, class: "fw-bold mb-6" %>
             <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
             <%= display_errors(resource, :username) %>
             </div>
             </div>
            

            <div class="col-md-6 mb-4 ">   
            <div class="form-outline mb-4">
              <%= f.label :password,  class:"fw-bold mb-6" %>
               <% if @minimum_password_length %>
              <em class= "fw-bold mb-6" >(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
              <%= display_errors(resource, :password) %>
            </div>

            <div class="col-md-6 mb-4 ">   
            <div class="form-outline mb-4">
            <%= f.label :password_confirmation, class:"fw-bold mb-600" %>
            <%= f.password_field :password_confirmation %>
            <%= display_errors(resource, :password_confirmation) %>
            </div>
            </div>

            <div class="form-check d-flex mb-4">
              <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked />
              <label class="form-check-label" for="form2Example33">
               Remember me
              </label>
            </div>

            <!-- Submit button -->
            <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-danger col-md-9" %>
            </div>


            <% def display_errors(resource, field) %>
            <% if resource.errors[field].any? %>
            <div class="error">
            <%= resource.errors[field].join(", ") %>
            </div>
            <% end %>
            <% end %>

            <!-- Register buttons -->
            <div class="text-center">
              <p>alreday have an account ? <span> <a href="/users/sign_in">Sign In</a></span></p> 
            </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-md-row text-center justify-content-between py-4 px-4 bg-primary">   
    <div class="text-white mb-3 mb-md-0">
      Copyright Â© 2020. All rights reserved.
    </div>  
</div>
  </div>
